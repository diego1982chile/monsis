{% extends 'base.html.twig' %}
{% form_theme GlobalFilters 'bootstrap_3_layout.html.twig' %}
{% block stylesheets %}    
{% endblock %}
{% block title %}Monsis{% endblock %}
{% block filtro %}                
    <form id="filtros" action="" method="post" style="float:left">                 
        {{ form(GlobalFilters) }}                                                                                                                     
    </form>    
{% endblock %}
{% block body %}
    {% for flash_message in app.session.flashbag.get('notice') %}            
    <div class="alert alert-info alert-dismissible" role="alert">                
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 style="margin:0px">
            <span class="glyphicon glyphicon glyphicon-ok-sign"></span>&nbsp;
            &nbspOperación realizada con éxito
        </h3>
        <div>
            <ul>
                {% set foo = flash_message|split('|') %}
                {% for var in foo %}                            
                <li style="margin:10px">                    
                    {{ var }}
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>                    
    {% endfor %}
    <h1 id="title"></h1>

    <table id="incidencias" class="display table-striped" style="display:none" width="100%">
        <thead>
            <tr>                
                <th width="3%">&nbsp;</th>
                <th width="5%">N°Ticket</th>                                
                <th width="10%">Fecha Inicio</th>             
                <th width="10%">Fecha Salida</th>             
                <th width="8%">Severidad</th>                       
                <th width="12%">Estado</th>                
                <th width="4%">Show/Edit</th>                
            </tr>
        </thead>
        <tbody>        
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
    <ul>
        <li>
            <a href="{{ path('incidencia_new') }}">Create a new entry</a>
        </li>
    </ul>
    {% endif %}
<div id="dialog-form" title="Agregar Observacion" style="padding:1em">     
    <textarea id="observacion" class="form-control" style="padding:1em;margin:1em;width:95%" value="">                
    </textarea>                  
</div>            
{% endblock %}
{% block javascripts %}
<script>
    var $anio = $('#form_Anio');
    var $mes = $('#form_Mes');
    var $estado = $('#form_Estado');
    var $componente = $('#form_componente');
    
    function updateTitle(){
        $('#title').html("Incidencias "+
                         $estado.find('option:selected').text()+" "+
                         $componente.find('option:selected').text()+" "+
                         $mes.find('option:selected').text()+" "+
                         $anio.val());        
    }
    
    var dialog = $( "#dialog-form" ).dialog({
      autoOpen: false,
      height: 250,
      width: 400,
      modal: true,
      buttons: {
        "Aceptar": addObservacion,
        Cancel: function() {
          dialog.dialog( "close" );          
        }
      },
      close: function() {        
      }
    });
    
    function addObservacion() {
        var link=$("#dialog-form").data('link');        
        $(link).attr('href',$(link).attr('href').replace('null',$('#observacion').val()));      
        $(link).click();        
    }                
    
    $(function() {
        $('#incidencias th').removeClass('ui-state-default');    
        $('#incidencias').show();                        
        updateTitle();
    });     
    
    var oTable = $('#incidencias').dataTable({
            //bPaginate: true,
            //iDisplatLength: 5,
            bJQueryUI: true,
            bServerSide: true,
            sAjaxSource: '{{ path('incidencia_body') }}',
            bPaginate: true,
            sServerMethod: 'GET',
            bProcessing: true,
            order: [[ 1, 'asc' ]],
            aoColumnDefs: [
                    {
                    aTargets: [0],
                    orderable: false,
                    class: 'fillRate'   
                    },       
                    {
                    aTargets: [1,2,3,4,5],
                    class: 'cols'                
                    }                
                ],
            dom: 'frtip<"toolbar">',            
            fnDrawCallback: function( oSettings ) {
                $('#incidencias th').removeClass('ui-state-default');                                                       
            },
            fnServerData: function ( sSource, aoData, fnCallback ) {
			/* Add some extra data to the sender */
			aoData.push( { "name": "anio", "value": $anio.val() } );
                        aoData.push( { "name": "mes", "value": $mes.val() } );
                        aoData.push( { "name": "estado", "value": $estado.val() } );
                        aoData.push( { "name": "componente", "value": $componente.val() } );
                        
			$.getJSON( sSource, aoData, function (json) { 
                            /* Do whatever additional processing you want on the callback, then tell DataTables */                                
                            //$('div.toolbar').html(json.pap);
                            fnCallback(json)
                            
                            $(".dropdown-menu > li > a.trigger").on("click",function(e){                                                    
                                var current=$(this).next();
                                var grandparent=$(this).parent().parent();
                                if($(this).hasClass('left-caret')||$(this).hasClass('right-caret'))
                                    $(this).toggleClass('right-caret left-caret');
                                grandparent.find('.left-caret').not(this).toggleClass('right-caret left-caret');
                                grandparent.find(".sub-menu:visible").not(current).hide();
                                current.toggle();
                                e.stopPropagation();
                            });

                            $(".dropdown-menu > li > a:not(.trigger)").on("click",function(){
                                var root=$(this).closest('.dropdown');
                                root.find('.left-caret').toggleClass('right-caret left-caret');
                                root.find('.sub-menu:visible').hide();
                            });                                      
                            
                            $( "a.estados" ).on( "click", function(e) {                                                                                                   
                                if($(this).parent().parent().prev().text()==$(this).text())
                                    return false;
                                if($(this).text()=='Resuelta MT'){
                                    if($('#observacion').val().trim()==''){
                                        dialog.data('link',$(this));
                                        dialog.dialog( "open" );
                                        return false;                 
                                    }
                                    else{                                        
                                        dialog.dialog( "close" );
                                        window.location=$(this).attr('href');                                                                                        
                                    }
                                }
                                else
                                    return true;
                            });
			});
                    }                    
                });        
        
        $anio.change(function() {
            updateTitle();
            oTable.fnDraw();            
        });
        
        $mes.change(function() {
            updateTitle();
            oTable.fnDraw();            
        });
        
        $estado.change(function() {
            updateTitle();
            oTable.fnDraw();            
        });
        
        $componente.change(function() {
            updateTitle();
            oTable.fnDraw();            
        });
        /*
        setInterval( function () {
            oTable.fnDraw();
        }, 30000 );
        */
</script>
{% endblock %}
